{
  "name": "@goldstack/template-nextjs",
  "version": "0.3.38",
  "description": "Building blocks for deploying Next.js applications to AWS using S3 and CloudFront",
  "keywords": [
    "goldstack",
    "utility",
    "infrastructure",
    "cloudfront",
    "next.js",
    "nextjs",
    "serverless",
    "aws",
    "s3",
    "terraform",
    "IaC",
    "configuration"
  ],
  "homepage": "https://goldstack.party/templates/nextjs",
  "bugs": {
    "url": "https://github.com/goldstack/goldstack/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/goldstack/goldstack-lib.git"
  },
  "license": "MIT",
  "author": "Max Rohde",
  "sideEffects": false,
  "main": "dist/templateNextjs.js",
  "bin": {
    "template": "./bin/template",
    "template-nextjs": "./bin/template"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build:watch": "yarn clean && yarn compile:watch",
    "clean": "rm -rf ./dist",
    "compile": "tsc -p tsconfig.json",
    "compile:watch": "tsc -p tsconfig.json --watch",
    "compile:watch:light": "nodemon --watch ./src/ -e '*' --exec 'yarn compile'",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js",
    "generate:docs": "yarn generate:docs:next-js && yarn generate:docs:next-js-bootstrap && yarn generate:docs:next-js-markdown && yarn generate:docs:next-js-bootstrap-markdown",
    "generate:docs:next-js": "utils-docs-cli generate-template-docs modules/app-nextjs/ ./docs/ && cp ./docs/* ../../../templates/packages/app-nextjs/docs",
    "generate:docs:next-js-bootstrap": "utils-docs-cli generate-template-docs modules/app-nextjs-bootstrap/ ./docs/ && cp ./docs/* ../../../templates/packages/app-nextjs-bootstrap/docs",
    "generate:docs:next-js-bootstrap-markdown": "utils-docs-cli generate-markdown-doc ../../../templates/packages/app-nextjs-bootstrap/README.template.md ../../../templates/packages/app-nextjs-bootstrap/README.md",
    "generate:docs:next-js-markdown": "utils-docs-cli generate-markdown-doc ../../../templates/packages/app-nextjs/README.template.md ../../../templates/packages/app-nextjs/README.md",
    "generate:schema": "utils-package-config-generate Nextjs && cp schemas/* ../../../templates/packages/app-nextjs/schemas && cp schemas/* ../../../templates/packages/app-nextjs-bootstrap/schemas",
    "prepublishOnly": "yarn run build",
    "publish": "utils-git changed --exec \"yarn npm publish $@\"",
    "test:ci": "jest --passWithNoTests --config=./jest.config.js",
    "version:apply": "utils-git changed --exec \"yarn version $@ && yarn version apply\"",
    "version:apply:force": "yarn version $@ && yarn version apply"
  },
  "dependencies": {
    "@goldstack/infra": "0.3.8",
    "@goldstack/infra-aws": "0.3.9",
    "@goldstack/template-static-website-aws": "0.3.37",
    "@goldstack/utils-aws-cli": "0.3.11",
    "@goldstack/utils-cli": "0.2.4",
    "@goldstack/utils-config": "0.3.7",
    "@goldstack/utils-log": "0.2.4",
    "@goldstack/utils-package": "0.3.8",
    "@goldstack/utils-package-config": "0.3.8",
    "@goldstack/utils-sh": "0.4.7",
    "@goldstack/utils-template": "0.3.7",
    "@goldstack/utils-terraform": "0.3.13",
    "glob": "^7.1.6",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@goldstack/utils-docs-cli": "0.3.11",
    "@goldstack/utils-git": "0.1.25",
    "@goldstack/utils-package-config-generate": "0.2.4",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.0.6",
    "@types/yargs": "^15.0.5",
    "archiver": "^5.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "typescript": "^4.1.3"
  }
}
